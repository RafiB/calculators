{% extends 'calculator.html' %}

{%-
set labels = {
  'weight': ('Weight in kg (e.g. 76.3kg)', 'kg'),
  'height': ('Height in metres (e.g. 1.8m)', 'metres')
}
-%}

{%- block formula -%}
{{ labels if get_labels else (['Underweight']*18 + ['Normal']*7 + ['Overweight']*6 + ['Obese']*1000)[(weight / (height ** 2))|round|int], (weight / (height ** 2))|round|int }}
{%- endblock -%}